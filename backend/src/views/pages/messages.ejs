<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Messages - ATRIX Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
    .messages-container {
        max-width: 900px;
        margin: 0 auto;
    }
    
    .message-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.06);
        margin-bottom: 16px;
        transition: all 0.3s ease;
        overflow: hidden;
        border: 1px solid transparent;
    }
    
    .message-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        border-color: rgba(99, 102, 241, 0.2);
    }
    
    .message-card.unread {
        border-left: 4px solid #6366f1;
        background: linear-gradient(to right, rgba(99, 102, 241, 0.03), white);
    }
    
    .message-header {
        display: flex;
        align-items: flex-start;
        gap: 16px;
        padding: 20px;
    }
    
    .message-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }
    
    .message-icon.order_delivered { background: linear-gradient(135deg, #10b981, #059669); color: white; }
    .message-icon.order_shipped { background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; }
    .message-icon.order_confirmed { background: linear-gradient(135deg, #3b82f6, #2563eb); color: white; }
    .message-icon.review_reminder { background: linear-gradient(135deg, #f59e0b, #d97706); color: white; }
    .message-icon.promotion { background: linear-gradient(135deg, #ec4899, #db2777); color: white; }
    .message-icon.system { background: linear-gradient(135deg, #6b7280, #4b5563); color: white; }
    .message-icon.welcome { background: linear-gradient(135deg, #6366f1, #8b5cf6); color: white; }
    
    .message-content {
        flex: 1;
        min-width: 0;
    }
    
    .message-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1a1a2e;
        margin-bottom: 6px;
    }
    
    .message-text {
        color: #64748b;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 12px;
    }
    
    .message-meta {
        display: flex;
        align-items: center;
        gap: 16px;
        font-size: 0.85rem;
        color: #94a3b8;
    }
    
    .message-time {
        display: flex;
        align-items: center;
        gap: 4px;
    }
    
    .message-actions {
        display: flex;
        gap: 8px;
        padding: 12px 20px;
        background: #f8fafc;
        border-top: 1px solid #f1f5f9;
    }
    
    .message-btn {
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
    }
    
    .message-btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
    }
    
    .message-btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        color: white;
    }
    
    .message-btn-secondary {
        background: white;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }
    
    .message-btn-secondary:hover {
        background: #f1f5f9;
        color: #1a1a2e;
    }
    
    .empty-messages {
        text-align: center;
        padding: 80px 20px;
    }
    
    .empty-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        font-size: 3rem;
        color: #94a3b8;
    }
    
    .messages-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        flex-wrap: wrap;
        gap: 16px;
    }
    
    .messages-header h1 {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        color: #1a1a2e;
        margin: 0;
    }
    
    .unread-badge {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }
    
    .filter-tabs {
        display: flex;
        gap: 8px;
        margin-bottom: 24px;
        flex-wrap: wrap;
    }
    
    .filter-tab {
        padding: 10px 20px;
        border-radius: 10px;
        font-size: 0.9rem;
        font-weight: 500;
        background: white;
        color: #64748b;
        border: 1px solid #e2e8f0;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .filter-tab:hover {
        background: #f8fafc;
        color: #1a1a2e;
    }
    
    .filter-tab.active {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        border-color: transparent;
    }
    </style>
</head>
<body>
    <%- include('../partials/navbar', { user }) %>

    <div class="container py-5">
        <div class="messages-container">
            <div class="messages-header">
                <div>
                    <h1><i class="bi bi-bell me-2"></i>My Messages</h1>
                    <p class="text-muted mt-1">Stay updated with your orders and notifications</p>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <span class="unread-badge" id="unreadBadge" style="display: none;">
                        <span id="unreadCount">0</span> unread
                    </span>
                    <button class="message-btn message-btn-secondary" onclick="markAllAsRead()">
                        <i class="bi bi-check-all me-1"></i> Mark all read
                    </button>
                </div>
            </div>

            <div class="filter-tabs">
                <button class="filter-tab active" data-filter="all">All</button>
                <button class="filter-tab" data-filter="unread">Unread</button>
                <button class="filter-tab" data-filter="order_delivered">Deliveries</button>
                <button class="filter-tab" data-filter="review_reminder">Reviews</button>
            </div>

            <div id="messagesList">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <nav id="pagination" class="d-flex justify-content-center mt-4" style="display: none !important;">
            </nav>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    let currentFilter = 'all';
    let currentPage = 1;

    document.addEventListener('DOMContentLoaded', function() {
        loadMessages();
        loadUnreadCount();

        // Filter tabs
        document.querySelectorAll('.filter-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                currentFilter = this.dataset.filter;
                currentPage = 1;
                loadMessages();
            });
        });
    });

    async function loadMessages() {
        try {
            let url = `/api/messages?page=${currentPage}&limit=20`;
            if (currentFilter === 'unread') {
                url += '&unreadOnly=true';
            }

            const response = await fetch(url, { credentials: 'include' });
            const data = await response.json();

            if (data.success) {
                let messages = data.messages;

                // Client-side filtering for specific types
                if (!['all', 'unread'].includes(currentFilter)) {
                    messages = messages.filter(m => m.type === currentFilter);
                }

                renderMessages(messages);
                renderPagination(data.pagination);
            }
        } catch (error) {
            console.error('Error loading messages:', error);
            document.getElementById('messagesList').innerHTML = `
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Failed to load messages. Please try again.
                </div>
            `;
        }
    }

    async function loadUnreadCount() {
        try {
            const response = await fetch('/api/messages/unread-count', { credentials: 'include' });
            const data = await response.json();

            if (data.success) {
                const badge = document.getElementById('unreadBadge');
                const count = document.getElementById('unreadCount');
                if (data.count > 0) {
                    badge.style.display = 'inline-block';
                    count.textContent = data.count;
                } else {
                    badge.style.display = 'none';
                }
            }
        } catch (error) {
            console.error('Error loading unread count:', error);
        }
    }

    function renderMessages(messages) {
        const container = document.getElementById('messagesList');

        if (messages.length === 0) {
            container.innerHTML = `
                <div class="empty-messages">
                    <div class="empty-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <h3 class="text-muted">No messages yet</h3>
                    <p class="text-muted">When you receive notifications about your orders, they'll appear here.</p>
                    <a href="/shop" class="message-btn message-btn-primary mt-3">
                        <i class="bi bi-bag me-2"></i>Start Shopping
                    </a>
                </div>
            `;
            return;
        }

        const typeIcons = {
            order_delivered: 'ðŸŽ‰',
            order_shipped: 'ðŸ“¦',
            order_confirmed: 'âœ…',
            review_reminder: 'â­',
            promotion: 'ðŸŽ',
            system: 'ðŸ””',
            welcome: 'ðŸ‘‹'
        };

        container.innerHTML = messages.map(msg => `
            <div class="message-card ${msg.isRead ? '' : 'unread'}" data-id="${msg.id}">
                <div class="message-header">
                    <div class="message-icon ${msg.type}">
                        ${typeIcons[msg.type] || 'ðŸ””'}
                    </div>
                    <div class="message-content">
                        <div class="message-title">${msg.title}</div>
                        <div class="message-text">${msg.content}</div>
                        <div class="message-meta">
                            <span class="message-time">
                                <i class="bi bi-clock"></i>
                                ${formatDate(msg.createdAt)}
                            </span>
                            ${!msg.isRead ? '<span class="badge bg-primary">New</span>' : ''}
                        </div>
                    </div>
                </div>
                ${msg.actionUrl || msg.type === 'review_reminder' ? `
                <div class="message-actions">
                    ${msg.type === 'review_reminder' && msg.metadata?.products ? `
                        <a href="/orders" class="message-btn message-btn-primary">
                            <i class="bi bi-star me-1"></i> Write a Review
                        </a>
                    ` : msg.actionUrl ? `
                        <a href="${msg.actionUrl}" class="message-btn message-btn-primary">
                            <i class="bi bi-arrow-right me-1"></i> View Details
                        </a>
                    ` : ''}
                    ${!msg.isRead ? `
                        <button class="message-btn message-btn-secondary" onclick="markAsRead(${msg.id})">
                            <i class="bi bi-check me-1"></i> Mark as Read
                        </button>
                    ` : ''}
                    <button class="message-btn message-btn-secondary" onclick="deleteMessage(${msg.id})">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
                ` : ''}
            </div>
        `).join('');
    }

    function renderPagination(pagination) {
        if (pagination.pages <= 1) {
            document.getElementById('pagination').style.display = 'none';
            return;
        }

        let html = '<ul class="pagination">';
        
        html += `<li class="page-item ${pagination.page === 1 ? 'disabled' : ''}">
            <a class="page-link" href="#" onclick="goToPage(${pagination.page - 1})">Previous</a>
        </li>`;

        for (let i = 1; i <= pagination.pages; i++) {
            html += `<li class="page-item ${i === pagination.page ? 'active' : ''}">
                <a class="page-link" href="#" onclick="goToPage(${i})">${i}</a>
            </li>`;
        }

        html += `<li class="page-item ${pagination.page === pagination.pages ? 'disabled' : ''}">
            <a class="page-link" href="#" onclick="goToPage(${pagination.page + 1})">Next</a>
        </li>`;

        html += '</ul>';

        const nav = document.getElementById('pagination');
        nav.innerHTML = html;
        nav.style.display = 'flex';
    }

    function goToPage(page) {
        currentPage = page;
        loadMessages();
    }

    async function markAsRead(messageId) {
        try {
            const response = await fetch(`/api/messages/${messageId}/read`, {
                method: 'PUT',
                credentials: 'include'
            });

            if (response.ok) {
                const card = document.querySelector(`[data-id="${messageId}"]`);
                if (card) {
                    card.classList.remove('unread');
                    const newBadge = card.querySelector('.badge.bg-primary');
                    if (newBadge) newBadge.remove();
                    const markReadBtn = card.querySelector('button[onclick*="markAsRead"]');
                    if (markReadBtn) markReadBtn.remove();
                }
                loadUnreadCount();
            }
        } catch (error) {
            console.error('Error marking as read:', error);
        }
    }

    async function markAllAsRead() {
        try {
            const response = await fetch('/api/messages/mark-all-read', {
                method: 'PUT',
                credentials: 'include'
            });

            if (response.ok) {
                loadMessages();
                loadUnreadCount();
            }
        } catch (error) {
            console.error('Error marking all as read:', error);
        }
    }

    async function deleteMessage(messageId) {
        if (!confirm('Are you sure you want to delete this message?')) return;

        try {
            const response = await fetch(`/api/messages/${messageId}`, {
                method: 'DELETE',
                credentials: 'include'
            });

            if (response.ok) {
                const card = document.querySelector(`[data-id="${messageId}"]`);
                if (card) {
                    card.style.opacity = '0';
                    card.style.transform = 'translateX(100px)';
                    setTimeout(() => card.remove(), 300);
                }
                loadUnreadCount();
            }
        } catch (error) {
            console.error('Error deleting message:', error);
        }
    }

    function formatDate(dateString) {
        const date = new Date(dateString);
        const now = new Date();
        const diff = now - date;
        
        const minutes = Math.floor(diff / 60000);
        const hours = Math.floor(diff / 3600000);
        const days = Math.floor(diff / 86400000);

        if (minutes < 1) return 'Just now';
        if (minutes < 60) return `${minutes} min ago`;
        if (hours < 24) return `${hours} hour${hours > 1 ? 's' : ''} ago`;
        if (days < 7) return `${days} day${days > 1 ? 's' : ''} ago`;

        return date.toLocaleDateString('en-US', { 
            month: 'short', 
            day: 'numeric',
            year: date.getFullYear() !== now.getFullYear() ? 'numeric' : undefined
        });
    }
    </script>
</body>
</html>
