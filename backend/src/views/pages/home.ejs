            <div class="text-center mb-5">
                <h2 class="section-title">Shop by Category</h2>
                <p class="section-subtitle">Browse our carefully curated categories for your perfect find</p>
            </div>
            <div class="row g-4">
                <% categories.forEach((category, index) => { %>
                <div class="col-6 col-md-4 col-lg-2 animate-slide-up" style="animation-delay: <%= index * 100 %>ms">
                    <a href="/shop?categoryId=<%= category.id %>" class="text-decoration-none">
                        <div class="category-card">
                            <img src="<%= category.image || 'https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=400' %>" alt="<%= category.name %>">
                            <div class="category-card-overlay">
                                <h5 class="category-card-title"><%= category.name %></h5>
                                <span class="category-card-count">Explore â†’</span>
                            </div>
