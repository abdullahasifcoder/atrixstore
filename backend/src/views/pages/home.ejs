    <style>
    /* Hero Section Premium Styles */
    .hero-section-premium {
        background: linear-gradient(135deg, #fefefe 0%, #f8fafc 50%, #eef2ff 100%);
        position: relative;
        min-height: 85vh;
    }
    
    .hero-bg-shapes {
        position: absolute;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
    }
    
    .shape {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.5;
    }
    
    .shape-1 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, #818cf8 0%, #c084fc 100%);
        top: -100px;
        right: -100px;
        animation: float 8s ease-in-out infinite;
    }
    
    .shape-2 {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, #34d399 0%, #14b8a6 100%);
        bottom: -50px;
        left: 10%;
        animation: float 6s ease-in-out infinite reverse;
    }
    
    .shape-3 {
        width: 200px;
        height: 200px;
        background: linear-gradient(135deg, #fbbf24 0%, #f97316 100%);
        top: 40%;
        left: 30%;
        animation: float 10s ease-in-out infinite;
    }
    
    @keyframes float {
        0%, 100% { transform: translateY(0) scale(1); }
        50% { transform: translateY(-20px) scale(1.05); }
    }
    
    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: white;
        padding: 8px 20px 8px 12px;
        border-radius: 50px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        animation: slideInUp 0.6s ease;
    }
    
    .badge-pulse {
        width: 10px;
        height: 10px;
        background: #10b981;
        border-radius: 50%;
        animation: pulse 2s ease-in-out infinite;
    }
    
    @keyframes pulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4); }
        50% { box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); }
    }
    
    .badge-text {
        font-size: 0.875rem;
        font-weight: 600;
        color: #1a1a2e;
    }
    
    .hero-title-premium {
        font-family: 'Playfair Display', serif;
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 700;
        line-height: 1.1;
        color: #1a1a2e;
        animation: slideInUp 0.6s ease 0.1s both;
    }
    
    .gradient-text {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #d946ef 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .hero-subtitle-premium {
        font-size: 1.125rem;
        color: #64748b;
        line-height: 1.7;
        max-width: 500px;
        animation: slideInUp 0.6s ease 0.2s both;
    }
    
    .hero-trust-badges {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        animation: slideInUp 0.6s ease 0.3s both;
    }
    
    .trust-badge {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.875rem;
        color: #475569;
    }
    
    .trust-badge i {
        font-size: 1rem;
    }
    
    .btn-hero-primary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 16px 32px;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        font-weight: 600;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(99, 102, 241, 0.3);
        animation: slideInUp 0.6s ease 0.4s both;
    }
    
    .btn-hero-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(99, 102, 241, 0.4);
        color: white;
    }
    
    .btn-hero-primary .btn-arrow {
        transition: transform 0.3s ease;
    }
    
    .btn-hero-primary:hover .btn-arrow {
        transform: translateX(4px);
    }
    
    .btn-hero-secondary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 16px 32px;
        background: white;
        color: #1a1a2e;
        font-weight: 600;
        border-radius: 12px;
        text-decoration: none;
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
        animation: slideInUp 0.6s ease 0.5s both;
    }
    
    .btn-hero-secondary:hover {
        background: #1a1a2e;
        border-color: #1a1a2e;
        color: white;
    }
    
    @keyframes slideInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .hero-images-grid {
        position: relative;
        animation: fadeIn 1s ease 0.5s both;
    }
    
    .hero-main-image {
        position: relative;
    }
    
    .hero-main-image img {
        width: 100%;
        border-radius: 24px;
        box-shadow: 0 25px 80px rgba(0,0,0,0.12);
    }
    
    .hero-secondary-images {
        display: flex;
        gap: 16px;
        margin-top: 16px;
    }
    
    .hero-small-image {
        flex: 1;
    }
    
    .hero-small-image img {
        width: 100%;
        height: 120px;
        object-fit: cover;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }
    
    .floating-card {
        position: absolute;
        background: white;
        padding: 16px 20px;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.12);
        display: flex;
        align-items: center;
        gap: 12px;
        animation: floatCard 3s ease-in-out infinite;
    }
    
    .floating-card-1 {
        bottom: 20%;
        left: -30px;
        animation-delay: 0s;
    }
    
    .floating-card-2 {
        top: 10%;
        right: -20px;
        animation-delay: 1.5s;
    }
    
    @keyframes floatCard {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
    
    .avatar-stack {
        display: flex;
    }
    
    .avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.75rem;
        border: 2px solid white;
        margin-left: -8px;
    }
    
    .avatar:first-child {
        margin-left: 0;
    }
    </style>

