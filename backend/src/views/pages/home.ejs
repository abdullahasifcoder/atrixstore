    </section>

    <!-- Featured Products -->
    <section class="section section-light">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h2 class="section-title mb-2 text-start">Featured Products</h2>
                    <p class="text-muted mb-0">Our most popular picks this season</p>
                </div>
                <a href="/shop?featured=true" class="btn-premium btn-dark-premium d-none d-md-inline-flex">
                    View All <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
            <div class="row g-4">
                <% featuredProducts.forEach((product, index) => { %>
                <div class="col-6 col-md-4 col-lg-3 animate-slide-up" style="animation-delay: <%= index * 100 %>ms">
                    <div class="product-card">
                        <div class="product-card-image">
                            <img src="<%= product.imageUrl || 'https://images.unsplash.com/photo-1560343090-f0409e92791a?w=500' %>" alt="<%= product.name %>">
                            <% if (product.isFeatured) { %>
                            <span class="product-badge badge-hot">ðŸ”¥ Hot</span>
                            <% } %>
                            <div class="product-actions">
                                <a href="/product/<%= product.slug %>" class="product-action-btn" title="Quick View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <button class="product-action-btn wishlist-btn" title="Add to Wishlist" onclick="toggleWishlist(<%= product.id %>, this)" data-product-id="<%= product.id %>">
                                    <i class="bi bi-heart"></i>
                                </button>
                            </div>
                        </div>
                        <div class="product-card-body">
                            <span class="product-category"><%= product.category?.name || 'General' %></span>
                            <h5 class="product-title"><%= product.name %></h5>
                            <div class="product-rating">
                                <span class="stars">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-half"></i>
                                </span>
                                <span class="count">(<%= product.salesCount || 0 %> sold)</span>
                            </div>
                            <div class="product-price">
                                <span class="price-current">$<%= parseFloat(product.price).toFixed(2) %></span>
                                <% if (product.comparePrice) { %>
                                <span class="price-original">$<%= parseFloat(product.comparePrice).toFixed(2) %></span>
                                <% } %>
                            </div>
                            <a href="/product/<%= product.slug %>" class="add-to-cart-btn">
                                <i class="bi bi-eye me-2"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
            <div class="text-center mt-4 d-md-none">
                <a href="/shop?featured=true" class="btn-premium btn-dark-premium">
                    View All Products <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </section>

